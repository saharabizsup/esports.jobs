{
  "name": "esports.jobs",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace @esportsjobs/api\" \"npm run dev --workspace @esportsjobs/web\"",
    "dev:api": "npm run dev --workspace @esportsjobs/api",
    "dev:web": "npm run dev --workspace @esportsjobs/web",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace @esportsjobs/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
